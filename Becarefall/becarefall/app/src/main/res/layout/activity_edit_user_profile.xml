<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditUserProfile"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <TextView
        android:id="@+id/textView12"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:text="Select what to edit"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/eup_EditPhone_Button"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:text="Edit Phone Number"
        app:layout_constraintEnd_toEndOf="@+id/eup_EditName_Button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/eup_EditName_Button"
        app:layout_constraintTop_toBottomOf="@+id/eup_EditName_Button" />

    <Button
        android:id="@+id/eup_EditName_Button"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:text="Edit Name"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Button
        android:id="@+id/eup_EditLocation_Button"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:text="Edit Location"
        app:layout_constraintEnd_toEndOf="@+id/eup_EditPhone_Button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/eup_EditPhone_Button"
        app:layout_constraintTop_toBottomOf="@+id/eup_EditPhone_Button" />

    <Button
        android:id="@+id/eup_EditPassword_Button"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:text="Edit Password"
        app:layout_constraintEnd_toEndOf="@+id/eup_EditLocation_Button"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/eup_EditLocation_Button"
        app:layout_constraintTop_toBottomOf="@+id/eup_EditLocation_Button" />

    <ImageButton
        android:id="@+id/eup_HomeButton_Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/eup_EditPassword_Button"
        app:layout_constraintStart_toStartOf="@+id/eup_EditPassword_Button"
        app:srcCompat="@drawable/ezgif_4_e2bfd897df" />

</androidx.constraintlayout.widget.ConstraintLayout>