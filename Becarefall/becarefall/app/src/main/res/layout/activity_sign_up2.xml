<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp2">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="320dp"
        android:layout_height="351dp"
        android:layout_marginTop="40dp"
        android:background="#99eeff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:text="Complete Your Profile"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Enter Your Full Name:"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/su2_name_box"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/su2_name_box"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="#bbddff"
        android:ems="10"
        android:gravity="top"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/su2_phone_box"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="#bbddff"
        android:ems="10"
        android:gravity="top"
        android:inputType="text"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/su2_address_box"
        android:layout_width="267dp"
        android:layout_height="77dp"
        android:layout_marginTop="12dp"
        android:background="#bbddff"
        android:ems="10"
        android:gravity="top"
        android:inputType="text"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text=" Enter Phone Number:"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/su2_name_box"
        app:layout_constraintTop_toBottomOf="@+id/su2_name_box" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Enter your address:"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/su2_phone_box"
        app:layout_constraintTop_toBottomOf="@+id/su2_phone_box" />

    <TextView
        android:id="@+id/su2_phone_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="30dp"
        android:text="Phone Number is invalid."
        android:textColor="#FF0000"
        app:layout_constraintStart_toStartOf="@+id/su2_phone_box"
        app:layout_constraintTop_toTopOf="@+id/su2_phone_box" />

    <Button
        android:id="@+id/su2_confirm_button"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>