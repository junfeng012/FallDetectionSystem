<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateCaretaker">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:text="Update Caretaker"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/uc_SetPriority_Button"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:text="Set Priority"
        app:layout_constraintEnd_toEndOf="@+id/uc_AddCaretaker_Button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/uc_AddCaretaker_Button"
        app:layout_constraintTop_toBottomOf="@+id/uc_AddCaretaker_Button" />

    <Button
        android:id="@+id/uc_AddCaretaker_Button"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_marginTop="80dp"
        android:text="Add Caretaker"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/uc_DeleteCaretaker_Button"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:text="Delete Caretaker"
        app:layout_constraintEnd_toEndOf="@+id/uc_SetPriority_Button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/uc_SetPriority_Button"
        app:layout_constraintTop_toBottomOf="@+id/uc_SetPriority_Button" />

    <ImageButton
        android:id="@+id/uc_HomeButton_Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ezgif_4_e2bfd897df" />
</androidx.constraintlayout.widget.ConstraintLayout>